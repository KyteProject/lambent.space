{
	"extends": [
		"eslint:recommended",
		"plugin:import/errors",
		"plugin:react/recommended",
		"plugin:jsx-a11y/recommended"
	],
	"rules": {
		"react/jsx-filename-extension": [
			1,
			{
				"extensions": [
					".js",
					".jsx"
				]
			}
		],
		"react/prop-types": 0,
		"jsx-a11y/label-has-for": 0,
		"no-console": 0,
		"quotes": [
			"warn",
			"single"
		],
		"semi": [
			"warn",
			"always"
		]
	},
	"globals": {
		"window": true,
		"document": true,
		"localStorage": true,
		"FormData": true,
		"FileReader": true,
		"Blob": true,
		"navigator": true
	},
	"plugins": [
		"react",
		"import",
		"jsx-a11y"
	],
	"parser": "babel-eslint",
	"settings": {
		"react": {
			"createClass": "createReactClass",
			"pragma": "React",
			"version": "16.5.2",
			"flowVersion": "0.53"
		},
		"propWrapperFunctions": [
			"forbidExtraProps"
		]
	},
	"parserOptions": {
		"ecmaVersion": 8,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true,
			"classes": true,
			"impliedStrict": true
		}
	},
	"env": {
		"es6": true,
		"browser": true,
		"node": true
	}
}
